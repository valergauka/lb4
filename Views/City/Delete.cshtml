@model City
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete city</h1>
<form method="post" asp-action="DeleteCity">
	<input asp-for="Id" hidden />
	<div class="form-group row">
	  <label>Name</label>
	  <div class="col-sm-8">
		  <input asp-for="Name" disabled />
	  </div>
  </div>
  <div class="form-group row">
		<label>Code</label>
		<div class="col-sm-8">
			<input asp-for="Code" disabled />
		</div>
  </div>
   <div class="form-group row">
		<label>Tariff</label>
		<div class="col-sm-8">
			<input asp-for="Tariff" disabled />
		</div>
  </div>
  <div class="col-sm-8 pt-2">
	  <button type="submit">Delete city</button>
  </div>
</form>