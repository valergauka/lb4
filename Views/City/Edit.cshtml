@model City
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit city</h1>
<form method="post" asp-action="Edit">
  <div class="form-group row">
	  <label>Name</label>
	  <div class="col-sm-8">
		  <input asp-for="Name" />
		  <span asp-validation-for="Name"></span>
	  </div>
  </div>
  <div class="form-group row">
		<label>Code</label>
		<div class="col-sm-8">
			<input asp-for="Code" />
			<span asp-validation-for="Code"></span>
		</div>
  </div>
   <div class="form-group row">
		<label>Tariff</label>
		<div class="col-sm-8">
			<input asp-for="Tariff"/>
			<span asp-validation-for="Tariff"></span>
		</div>
  </div>
  <div class="col-sm-8 pt-2">
	  <button type="submit">Edit city</button>
  </div>
</form>